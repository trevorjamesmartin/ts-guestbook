    "connect-session-knex": "^2.1.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.17.3",
    "express-content-length-validator": "^1.0.0",
    "express-enforces-ssl": "^1.1.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "host-validation": "^2.0.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.5",
    "pg": "^8.7.3",
    "socket.io": "^4.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
