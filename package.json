{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "17.9.0",
    "npm": "8.5.5"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "start:dev": "npx nodemon -r dotenv/config index.ts",
    "create:db": "npx knex migrate:latest && npx knex seed:run",
    "build:client": "cd src/app;npm i && npm run build",
    "build": "npm run build:client",
    "develop": "npm run build && npm run start:dev",
    "precompile": "npm run build",
    "compile": "tsc",
    "release:scripts": "npx ts-node scripts/release-package.ts && rm -rf dist/scripts",
    "prepackage": "mkdir -p dist/src/app/build && cp -rp src/app/build dist/src/app && npm run release:scripts",
    "package": "tar czvf dist.tar.gz dist/* && mkdir -p release && mv dist.tar.gz release",
    "clean": "rm -rf dist/* >> /dev/null 2>&1;rm dist.tar.gz >> /dev/null 2>&1;rm release/* >> /dev/null 2>&1",
    "release": "npm run compile && npm run package",
    "contain": "cd release;docker build . -t vigilant-cloud",
    "start:container": "docker run -v $(pwd)/db:/opt/app/db -p 8080:8080 -d vigilant-cloud",
    "stop:container": "docker ps|grep vigilant-cloud|awk '{print $1}' | xargs docker stop",
    "build:container": "npm run clean && npm run release && npm run contain",
    "dockerize": "npm run stop:container >> /dev/null 2>&1;npm run build:container && npm run start:container"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
